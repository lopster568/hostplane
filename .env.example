# ── Required ────────────────────────────────────────────────────────────────
API_KEY=your-secret-api-key

DB_ROOT_PASSWORD=changeme-root
DB_PASSWORD=changeme-control

BASE_DOMAIN=hosto.com

TUNNEL_NAME=hosto
TUNNEL_SERVICE_TARGET=http://10.10.0.10:8080

# ── Docker TLS (to reach app-01 Docker daemon) ──────────────────────────────
# Put ca.pem, cert.pem, key.pem in this directory
DOCKER_CERT_DIR=./certs
DOCKER_HOST=tcp://10.10.0.10:2376

# ── Cloudflared config ───────────────────────────────────────────────────────
# Directory containing cloudflared config.yml
CLOUDFLARED_CONFIG_DIR=./cloudflared

# ── Optional overrides (defaults shown) ─────────────────────────────────────
API_PORT=8080
APP_SERVER_IP=10.10.0.10
DOCKER_NETWORK=wp_backend
CADDY_CONTAINER=caddy
CADDY_CONF_DIR=/etc/caddy/sites
CADDY_STATIC_VOLUME=caddy_static_sites

# Optional: path to a directory with extra SQL init scripts for MariaDB
# INITDB_DIR=./initdb
